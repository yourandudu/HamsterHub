# Virtual Try-On App Configuration
# Development and production environment configurations

# API Configuration
API_BASE_URL_DEV=https://api-dev.example.com
API_BASE_URL_STAGING=https://api-staging.example.com
API_BASE_URL_PROD=https://api.example.com

# App Configuration
APP_NAME=Virtual Try-On
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Database Configuration
DB_NAME=tryon.db
DB_VERSION=1

# Cache Configuration
CACHE_DURATION_HOURS=24
MAX_CACHE_SIZE_MB=100

# Image Configuration
MAX_IMAGE_SIZE_MB=10
IMAGE_QUALITY=85
THUMBNAIL_SIZE=200

# Try-On Configuration
TRYON_TIMEOUT_SECONDS=30
MAX_CONFIDENCE_THRESHOLD=0.8
MIN_CONFIDENCE_THRESHOLD=0.6

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_DEBUG_MODE=false
ENABLE_OFFLINE_MODE=true

# Social Features
ENABLE_SHARING=true
ENABLE_SOCIAL_LOGIN=false

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=true

# Deep Linking
DEEP_LINK_SCHEME=tryon
DEEP_LINK_HOST=app.tryon.com